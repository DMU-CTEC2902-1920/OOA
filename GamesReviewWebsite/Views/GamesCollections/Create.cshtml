@model GamesReviewWebsite.Models.GamesCollection

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Create</title>
</head>
<body>
    <div class="card">
        <div class="card-header">
            <h3>How to create a Game Review <span class="caret"></span></h3>
        </div>
        <div id="CreateReview" class=" collapse">
            <div class=”card-body”>
                <p><strong>To start creating a games review, simply enter </strong></p>
                <p><strong>the details for the game you're writing the review</strong></p>
                <p><strong>for, then once all fields are filled in press submit </strong></p>
                <p><strong>to confirm the creation of your new Game Review. </strong></p>

            </div>
        </div>
    </div>
    <h3 class="card-title">
        <a data-toggle="collapse" href="#CreateReview">
            How to Create a Games Review:
        </a>
    </h3>
