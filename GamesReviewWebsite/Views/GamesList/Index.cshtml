@model IEnumerable<GamesReviewWebsite.Models.GamesCollection>

@{
    ViewBag.Title = "Add a Games Review";
}

<h2>Index</h2>

@foreach (var gamesCollection in @Model)
{
    <li><a href="~/GameCollections/Details/@gamesCollection.GameID">@gamesCollection.GameName</a></li>
    if (gamesCollection.GameScore < 5)
    {
        <text> Low Rated Game!</text>
    }
    else if (gamesCollection.GameScore > 5)
    {
        <text> High Rated Game!</text>
    }



}

<br />
<p>
    @Html.ActionLink("Add a Game Review", "Create")
</p>
<br />
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.GameID)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.GameDeveloper)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.GameGenre)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.GameName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.GameDescription)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.GameScore)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.GameAgeRating)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.GameID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.GameDeveloper)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.GameGenre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.GameName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.GameDescription)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.GameScore)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.GameAgeRating)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.Id })
            </td>
        </tr>
    }

</table>
